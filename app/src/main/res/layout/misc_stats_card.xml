<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/location_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardUseCompatPadding="true"
        android:elevation="2dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_name"
                android:text="This Week"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- FIRST STAT ROW -->
            <RelativeLayout
                android:id="@+id/stat_card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:id="@+id/stat_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Stat One"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="24sp"
                    />

                <TextView
                    android:id="@+id/stat_circle_1"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="65dp"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle"/>
            </RelativeLayout>

            <!-- SECOND STAT ROW -->
            <RelativeLayout
                android:id="@+id/stat_card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">
                <TextView
                    android:id="@+id/stat_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Stat One"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/stat_circle_2"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:text="10"
                    android:textSize="65dp"
                    android:textStyle="bold"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/circle"/>
            </RelativeLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>